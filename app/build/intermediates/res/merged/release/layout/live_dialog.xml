<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_dialog_login"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="@string/live_login"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/level_4" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:src="@drawable/iv_server" />

            <EditText
                android:id="@+id/etIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/transparent"
                android:hint="@string/input_address"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:singleLine="true"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="#20ffffff" />

        <RelativeLayout
            android:id="@+id/reUserName"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:src="@drawable/iv_user" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/transparent"
                android:hint="@string/input_username"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:singleLine="true"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="#20ffffff" />

        <RelativeLayout
            android:id="@+id/rePwd"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:src="@drawable/iv_pwd" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/transparent"
                android:hint="@string/input_password"
                android:inputType="textPassword"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:singleLine="true"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="#20ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="45dip"
                android:layout_height="30dip"
                android:background="@drawable/selector_corner_btn"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="45dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_corner_btn"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>