<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#030712" />

            <corners
                android:radius="5dp" />
            <size 
                android:width="40dp"
                android:height="20dp"/>
            
            <stroke
                android:width="0.1dp"
                android:color="#40AF1610"/>

        </shape>
    </item>

</layer-list>